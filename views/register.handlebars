<h3>Join Margaret's petition and register today to make the world better!</h3>
<div class="main-content">
    <h2>Register Today!</h2>
    <form method="POST">
        <div class="input-box">
            <input
                type="text"
                name="first"
                onkeyup="this.setAttribute('value', this.value);"
                value=""
                required
            />
            <label>First Name</label>
        </div>
        <div class="input-box">
            <input
                type="text"
                name="last"
                onkeyup="this.setAttribute('value', this.value);"
                value=""
                required
            />
            <label>Last Name</label>
        </div>
        <div class="input-box">
            <input
                type="email"
                name="email"
                onkeyup="this.setAttribute('value', this.value);"
                value=""
                required
            />
            <label>Email Address</label>
        </div>
        <div class="input-box">
            <input
                type="password"
                name="pwd"
                onkeyup="this.setAttribute('value', this.value);"
                value=""
                required
            />
            <label>Password</label>
        </div>
        <input type="hidden" name="_csrf" value="{{ csrfToken }}" />

        <button id="signup-button" class="buttons">Sign up</button>
        {{#if error}}
        <p id="register-wrong" class="error-msg">
            Wooooops something went wrong!
        </p>
        {{/if}}
        <p id="redirect-login">
            Already registered? Click
            <a href="/login" id="click-here">here</a> to log in!
        </p>
    </form>
</div>
